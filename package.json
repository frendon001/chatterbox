{
	"name": "chatterbox",
	"version": "1.0.0",
	"description": "A simple chat application implemented with web-sockets",
	"main": "build/server/index.js",
	"engines": {
		"node": "12.x",
		"npm": "6.x"
	},
	"scripts": {
		"start": "NODE_ENV=production node build/server/index.js",
		"server:dev": "npm run validate && npm run build:dev-server && nodemon build/index.js",
		"client:dev": "webpack-dev-server --open --config webpack.dev.js",
		"dev": "npm run clean:dev && concurrently \"npm run server:dev\" \"npm run client:dev\"",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=true npm run build",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx,.jsx .",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|jsx|ts|tsx)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"check-types": "tsc",
		"validate": "npm-run-all --parallel check-types check-format lint",
		"build:client": "webpack --config webpack.prod.js",
		"build:server": "babel src --extensions .js,.ts,.tsx --out-dir build",
		"build:dev-server": "babel src --extensions .js,.ts,.tsx --out-dir build --source-maps",
		"build": "npm run build:server && npm run build:client",
		"test": "echo \"Error: no test specified\" && exit 1",
		"clean": "rimraf build && rimraf dist",
		"clean:dev": "rimraf build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/frendon001/chatterbox.git"
	},
	"author": "Fausto Rendon",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/frendon001/chatterbox/issues"
	},
	"homepage": "https://github.com/frendon001/chatterbox#readme",
	"dependencies": {
		"@types/express": "^4.17.7",
		"@types/helmet": "0.0.47",
		"@types/materialize-css": "^1.0.8",
		"@types/react-router-dom": "^5.1.5",
		"@types/uuid": "^8.0.0",
		"@types/ws": "^7.2.6",
		"axios": "^0.21.1",
		"body-parser": "^1.20.1",
		"concurrently": "^5.2.0",
		"express": "^4.18.2",
		"helmet": "^3.23.3",
		"material-design-icons": "^3.0.1",
		"materialize-css": "^1.0.0",
		"nodemon": "^2.0.4",
		"path-parser": "^6.1.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-hot-loader": "^4.12.21",
		"react-router-dom": "^5.2.0",
		"uuid": "^8.2.0",
		"ws": "^7.3.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.5",
		"@babel/core": "^7.10.5",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-react": "^7.10.4",
		"@babel/preset-typescript": "^7.10.4",
		"@types/react": "^16.9.43",
		"@types/react-dom": "^16.9.8",
		"@types/webpack-env": "^1.15.2",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"babel-loader": "^8.1.0",
		"css-loader": "^3.6.0",
		"eslint": "^7.4.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.20.3",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^4.3.0",
		"html-webpack-template": "^6.2.0",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"style-loader": "^1.2.1",
		"terser-webpack-plugin": "^3.0.7",
		"typescript": "3.7.5",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0",
		"webpack-merge": "^4.2.2"
	}
}
